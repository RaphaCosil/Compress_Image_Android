<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Image compressor"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.136" />

    <EditText
        android:id="@+id/imageSize"
        android:layout_width="315dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:fontFamily="monospace"
        android:hint="Insert the size you want"
        android:inputType="number"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_normal_image_size" />

    <TextView
        android:id="@+id/tv_normal_image_size"
        android:layout_width="180dp"
        android:layout_height="72dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="211dp"
        android:layout_marginBottom="34dp"
        android:fontFamily="monospace"
        android:text="Original image size: "
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLoadImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewNormal"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewNormal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_compressed_image_size"
        android:layout_width="180dp"
        android:layout_height="72dp"
        android:layout_marginTop="211dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="31dp"
        android:fontFamily="monospace"
        android:text="Image compressed size: "
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonLoadImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewCompress"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewCompress"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewNormal"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/buttonLoadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:fontFamily="monospace"
        android:text="Load image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewNormal" />

</androidx.constraintlayout.widget.ConstraintLayout>